-#  This file is app/views/randomgenerator/index.html.haml
%h1 Topical Memory System

%table#randomgenerators
  %thead
    %tr
      %th Title
      %th Run Generator
  %tbody
    - @randomgenerators.each do |randomgenerator|
      %tr
        %td= randomgenerator.title unless not randomgenerator.is_a?(Randomgenerator)
        %td= link_to "Run #{randomgenerator.title}", randomgenerator_path(randomgenerator) unless not randomgenerator.is_a?(Randomgenerator)

= link_to 'Add new random generator', new_randomgenerator_path
      
     
= link_to 'Back', movies_path
